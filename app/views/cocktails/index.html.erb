<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All cocktails</h1>
      <%= link_to "Add a new cocktail", new_cocktail_path, class: 'btn btn-primary' %>
      <%= cl_image_tag("https://images.unsplash.com/photo-1560963689-b5682b6440f8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1886&q=80",width: 850, height: 500, crop: :fill) %>
      <ul class="list-group">
        <% @cocktails.each do |cocktail| %>
          <li class="list-group-item">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </li>
          <%= cl_image_tag(cocktail.photo.key, width: 850, height: 500, crop: :fill) %>
        <% end %>
      </ul>
      <%= link_to "Add a new cocktail", new_cocktail_path, class: 'btn btn-primary' %>

      <%= cl_image_tag("https://images.unsplash.com/photo-1551751299-1b51cab2694c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2255&q=80",width: 850, height: 500, crop: :fill) %>

    </div>
  </div>
</div>
